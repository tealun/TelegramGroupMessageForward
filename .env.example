# Telegram API配置
TELEGRAM_API_ID=你的API_ID
TELEGRAM_API_HASH=你的API_HASH
TELEGRAM_PHONE=你的手机号

# 代理配置（可选）
HTTP_PROXY_HOST=127.0.0.1
HTTP_PROXY_PORT=18081
SOCKS_PROXY_HOST=127.0.0.1
SOCKS_PROXY_PORT=18080
ENABLE_PROXY=false

# === 群组转发功能配置 ===

# 是否启用群组转发功能 (true/false)
ENABLE_GROUP_FORWARD=true

# 目标机器人Token (从 @BotFather 获取)
BOT_TOKEN=你的机器人Token

# 监听的群组ID列表，用逗号分隔
MONITOR_GROUPS=群组ID1,群组ID2

# 转发过滤配置
FORWARD_MEDIA=true              # 是否转发媒体文件
FORWARD_STICKERS=true           # 是否转发表情贴纸
FORWARD_VOICE=true              # 是否转发语音消息
FORWARD_FORWARDED=false         # 是否转发转发的消息
FORWARD_BOT_MESSAGES=true       # 是否转发机器人消息

# === 转发模式配置 ===

# 转发模式选择：
# false = 直接转发模式（前缀+转发标记，速度快，节省流量）
# true = 下载重发模式（纯净内容，无前缀无转发标记，消耗流量，速度较慢）
DOWNLOAD_AND_RESEND=false

# 下载重发模式专用配置
MAX_DOWNLOAD_SIZE=20            # 最大下载文件大小(MB)，超过则自动改为直接转发

# 转发过滤配置（对两种模式都生效）
FORWARD_MEDIA=true              # 是否转发媒体文件
FORWARD_STICKERS=true           # 是否转发表情贴纸
FORWARD_VOICE=true              # 是否转发语音消息
FORWARD_FORWARDED=false         # 是否转发转发的消息
FORWARD_BOT_MESSAGES=true       # 是否转发机器人消息

# 消息格式配置
MESSAGE_PREFIX=📢 [{chat_title}] {sender_name}:    # 消息前缀模板
SHOW_MESSAGE_TIME=true          # 是否显示消息时间
TIME_FORMAT=%Y-%m-%d %H:%M:%S   # 时间格式

# 高级配置
MAX_MESSAGE_LENGTH=4000         # 最大消息长度
ENABLE_DEDUPLICATION=true       # 是否启用消息去重
DEDUP_WINDOW=60                 # 去重时间窗口(秒)
FORWARD_DELAY=1                 # 转发延迟(秒)
